<?xml version="1.0"?>
<robot name="EPSON_C8-C1401SR" xmlns:xacro="http://www.ros.org/wiki/xacro">

<!-- arg model for xacro files -->
  <xacro:arg name="rb_model" default="C8-C1401SR" />

<!-- include xacro -->
  <xacro:include filename="$(find epson_robot_description)/models/$(arg rb_model)/urdf/epson_robot_property.xacro" />
  <xacro:include filename="$(find epson_robot_description)/models/$(arg rb_model)/urdf/epson_robot_transmission.xacro" />
  <xacro:include filename="$(find epson_robot_description)/models/$(arg rb_model)/urdf/epson_robot.ros2_control.xacro" />

<!-- world link -->
  <link name="world"/>

<!-- base link -->
  <link name="${BASE_LINK}">
    <visual>
      <origin
        xyz="0 0 0"
        rpy="1.57 0 0" />
      <geometry>
        <mesh
          filename="package://${BASE_MESH}" scale="0.001 0.001 0.001" />
      </geometry>
      <material
        name="">
        <color
          rgba="1 1 1 1" />
      </material>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="1.57 0 0" />
      <geometry>
        <mesh
          filename="package://${BASE_MESH}" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>
  <joint name="${BASE_JOINT}" type="fixed">
    <origin
      xyz="0 0 0"
      rpy="0 0 0" />
    <parent
      link="world"/>
    <child
      link="${BASE_LINK}" />
  </joint>
  


<!--link 1-->  
  <link name="${LINK_1}">
    <visual>
      <origin
        xyz="0 0 0.269"
        rpy="1.57 0 0" />
      <geometry>
        <mesh
          filename="package://${LINK1_MESH}" scale="0.001 0.001 0.001"/>
      </geometry>
      <material
